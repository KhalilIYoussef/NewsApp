<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mSection"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_0dp"
                android:layout_margin="@dimen/value_2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text1"
                android:textSize="@dimen/value_16sp" />

            <TextView
                android:id="@+id/mTitle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_0dp"
                android:layout_margin="@dimen/value_2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text2"
                android:textSize="@dimen/value_18sp" />


            <TextView
                android:id="@+id/mDate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_0dp"
                android:layout_margin="@dimen/value_2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text1"
                android:textSize="@dimen/value_13sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>